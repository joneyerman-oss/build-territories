<UserControl x:Class="TerritoryBuilder.App.Views.ResultsTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <DataGrid ItemsSource="{Binding RepMetrics}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Rep ID" Binding="{Binding RepId}"/>
                <DataGridTextColumn Header="Rep Name" Binding="{Binding RepName}"/>
                <DataGridTextColumn Header="Weighted Score" Binding="{Binding WeightedScore}"/>
                <DataGridTextColumn Header="Target" Binding="{Binding TargetScore}"/>
                <DataGridTextColumn Header="% to Target" Binding="{Binding PercentToTarget}"/>
                <DataGridTextColumn Header="Business Count" Binding="{Binding BusinessCount}"/>
                <DataGridTextColumn Header="Avg Distance" Binding="{Binding AverageDistance}"/>
                <DataGridTextColumn Header="Max Distance" Binding="{Binding MaxDistance}"/>
                <DataGridCheckBoxColumn Header="Contiguous" Binding="{Binding ContiguityPass}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
