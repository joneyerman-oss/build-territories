<UserControl x:Class="TerritoryBuilder.App.Views.ExportTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="12">
        <TextBlock Text="Export" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" />
        <TextBlock Text="Generate CSV, GeoJSON, and JSON output artifacts for downstream workflows." Margin="0,4,0,10" />
        <Button Content="Export CSV/GeoJSON/JSON" Command="{Binding ExportCommand}" Width="240" Style="{StaticResource SecondaryButtonStyle}"/>
        <TextBlock Text="{Binding StatusMessage}" Margin="0,10,0,0" TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>
