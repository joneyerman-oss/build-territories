<UserControl x:Class="TerritoryBuilder.App.Views.AssignmentTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="12">
        <TextBlock Text="Fairness tolerance (%)"/>
        <TextBox Text="{Binding FairnessTolerance}" Width="100"/>
        <Button Content="Run Assignment" Command="{Binding RunAssignmentCommand}" Width="160" Margin="0,8,0,0"/>
        <TextBlock Text="{Binding StatusMessage}" Margin="0,8,0,0" TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>
