<UserControl x:Class="TerritoryBuilder.App.Views.FiltersTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="12">
        <TextBlock Text="Filters" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" />
        <TextBlock Text="Include building categories used for candidate creation." Margin="0,4,0,10" />

        <GroupBox Header="Building types">
            <StackPanel>
                <CheckBox Content="Large Business" IsChecked="{Binding IncludeLargeBusiness}"/>
                <CheckBox Content="Medium Business" IsChecked="{Binding IncludeMediumBusiness}"/>
                <CheckBox Content="Small Business" IsChecked="{Binding IncludeSmallBusiness}"/>
                <CheckBox Content="Unknown" IsChecked="{Binding IncludeUnknown}"/>
                <CheckBox Content="(Blanks)" IsChecked="{Binding IncludeBlanks}"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>
